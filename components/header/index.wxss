/* components/component-tag-name.wxss */

.nav-pos {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 9999;
}

.nav-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav-left-pos {
    position: absolute;
    left: 0;
    padding-left: 36rpx;
    font-size: 36rpx;
    color: #000;
    display: flex;
    height: 100%;
    align-items: center;
}
.nav-left-input{
    position: absolute;
    left: 0;
    padding-left: 36rpx;
    font-size: 36rpx;
    color: #000;
    display: flex;
    height: 100%;
    align-items: center;
}
.back-search{
    position: absolute;
    left:56rpx;
    top: 25rpx;
    width: 35rpx;
    height: 35rpx;
}
.nav_l_input{
    border-radius: 50rpx;
    padding-left: 60rpx;
    height: 64rpx;
    width: 400rpx;
    font-size: 30rpx;
    background:rgba(242,242,242,1);
}

.icon {
    width: 44rpx;
    height: 44rpx;
}

.back-icon {
    width: 44rpx;
    height: 44rpx;
}

.nav-title {
    display: flex;
    max-width: 320rpx;
    height: 100%;
    align-items: center;
    font-size: 36rpx;
    color: #000;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.title-icon {
    width: 44rpx;
    height: 44rpx;
    transform: rotate(0deg);
    transition: all 0.3s ease-in 0s;
}

.title-icon-r {
    transform: rotate(180deg);
    transition: all 0.3s ease-in 0s;
}
.title-icon-r.act {
    transform: rotate(90deg);
    transition: all 0.3s ease-in 0s;
}
.title-icon_2{
    width: 12px;
    height: 12px;
}
.icon_clean_con{
    position: absolute;
    right:0rpx;
