/* pages/home.wxss */
page{
    height: 100%;
    background:rgb(240, 242, 245);
}
.main{
    height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}
.scroll_box{
    height: 100%;
    overflow: scroll;
}
.home-con {
    height: 100%;
}
.video_box{
    padding: 32rpx 30rpx 0rpx 30rpx; 
}
.line{
    width: 100%;
    height: 24rpx;
    border-bottom: 1rpx solid #e5e5e5;
}
.video_tit{
    font-size:32rpx;
    line-height:44rpx;
    color: #000
}

.forAudio{
    width: 100%;
    height: 400rpx;
}
.v-source-box{
    color: #999;
    font-size: 24rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.v_source{

}
.v_state{
    display: flex;
    flex-direction: row;
}

.videoImgBox{
    position: relative;
    margin-top: 16rpx;
    margin-bottom: 22rpx;
}
.icon_player{
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 120rpx;
    height: 132rpx;
}

.icon_zan{
    width: 44rpx;
    height: 44rpx;
}
.v_state_edit{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 32rpx;
}
.video_time{
    height: 30rpx;
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    background:rgba(0, 0, 0, 0.6);
    font-size: 20rpx;
    padding:5rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
}

.top_txt{
    font-size:24rpx;
    color: #999;
    padding: 12rpx 30rpx;
}
.icon_kong{
    width: 70%;
}
.icon_kong_box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 200rpx;
}
.icon_kong_txt{
    font-size: 28rpx;
    color: #bbb;
    margin-top: 36rpx;
}
.no_login{
    width: 100%;
    height: 100%;
    text-align: center;
}
.icon_login{
    margin-top: 200rpx;
    width:180rpx;
}
.icon_login_btn{
    width: 500rpx;
}
.for_login{
   padding: 0;
   margin: 0;
   background: none;
   margin-top: 50rpx;
}
.v_state_edit button::after{ border: none;}
button::after{ border: none;}